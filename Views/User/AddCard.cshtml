@{
    ViewData["Title"] = "Add Card";
}

@model BookCave.Models.InputModels.CardDetailsInputModel

<div>
	<form method="post">
		<div>
			<table class="table-condensed">
				<tr>
					<td><label asp-for="Name">Name</label></td>
					<td><input type="text" class="form-control" asp-for="Name"></td>
					<td><span asp-validation-for="Name"></span></td>
				</tr>
				<tr>
					<td><label asp-for="CardNumber">Card number</label></td>
					<td><input type="text" class="form-control" asp-for="CardNumber"></td>
					<td><span asp-validation-for="CardNumber"></span></td>
				</tr>
				<tr>
					<td><label asp-for="Cvc">CVC</label></td>
					<td><input type="text" class="form-control" asp-for="Cvc"></td>
					<td><span asp-validation-for="Cvc"></span></td>
				</tr>
				<tr>
                    <td>
                        <select asp-for="ExpirationDate.Month" class="form-control">
                            <option value='01'>01</option>
                            <option value='02'>02</option>
                            <option value='03'>03</option>
                            <option value='04'>04</option>
                            <option value='05'>05</option>
                            <option value='06'>06</option>
                            <option value='07'>07</option>
                            <option value='08'>08</option>
                            <option value='09'>09</option>
                            <option value='10'>10</option>
                            <option value='11'>11</option>
                            <option value='12'>12</option>
                        </select> 
                    </td>
                    <td>
                        <select asp-for="ExpirationDate.Year" class="form-control">
                            <option value='2018'>2018</option>
                            <option value='2019'>2019</option>
                            <option value='2020'>2020</option>
                            <option value='2021'>2021</option>
                            <option value='2022'>2022</option>
                            <option value='2023'>2023</option>
                        </select> 
                    </td>
				</tr>
			</table>
			<input type="submit" class="btn btn-primary" value="Add Card">
		</div>	
	</form>
</div>