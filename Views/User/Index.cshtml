		<div class="col-lg-12 profile-info">
			<div class="col-lg-5">
				@Model.Name
			</div>
			<div class="col-lg-2"></div>
			<div class="col-lg-5">
				@Model.Email
			</div>
		</div>
		<div class="col-lg-12 profile-info">
			<div class="col-lg-5">
				@Model.FavoriteBook[0].Title
			</div>
			<div class="col-lg-2"></div>			
			<div class="col-lg-5">
				@Model.FavoriteAuthor[0].Name
			</div>
		</div>
	</div>


	<div id="orders" class="col-lg-10 is-hidden">
