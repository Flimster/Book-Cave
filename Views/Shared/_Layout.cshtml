<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nav</title>


        <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />-->
        <link rel="stylesheet" href="~/css/site.css" />

        <!--<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.12/css/all.css" integrity="sha384-G0fIWCsCzJIMAVNQPfjH08cyYaUtMwjJwqiRKxxE/rx96Uroj1BtIQ6MLJuheaO9" crossorigin="anonymous">

        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/nav.css" type="text/css">
		<link rel="stylesheet" href="~/css/user/user.css" type="text/css">
		<link rel="stylesheet" href="~/css/Feedback/feedback.css" type="text/css">
		<link rel="stylesheet" href="~/css/Admin/admin.css" type="text/css">

</head>
<body>
    <div id="wrapper">   <!--Wrapper for the footer-->
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="row" id="upper-nav">
                <div class="col-sm-1"></div>
                
                <div class="col-sm-2 nav-height-control">
                    <a asp-controller="Home" asp-action="Index">
                      <img id="logo" src="~/images/LogoV2-W-text.png" alt="logo.png">
                      </a>
                </div>
                
                <div class="col-sm-6 nav-height-control">
                    <form action="get" method="#">
                        <input type="text" id="search-input" placeholder="Search for a name, authore, genre, ISBN ...">
                        <button type="submit" id="search-btn" class="btn btn-info"><div><i id="search-icon" class="fa fa-search"></i></div></button>
                    </form>
                </div >

                <div class="col-sm-1"></div>

                <div class="col-sm-1 nav-height-control">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>

            <div class="row" id="lower-nav">
                <div class="col-sm-1"></div>


                <div class="col-sm-5">

                    <ul class="nav navbar-nav">
                        <li class="dropdown mega-dropdown">
                            <a id="mega-menu-link" href="#" class="dropdown-toggle" data-toggle="dropdown">Shop by<span class="glyphicon glyphicon-chevron-down pull-right"></span></a>
                            <ul class="dropdown-menu mega-dropdown-menu col-sm-8 dropdown-menu-width-override">
                                <li class="col-sm-4 vertical-line-right">
                                    <ul>
                                        <li class="dropdown-header">Genre</li>
                                        <li><a href="#">Adventure</a></li>
                                        <li><a href="#">Fantasy</a></li>
                                        <li><a href="#">Science fiction</a></li>
                                        <li><a href="#">Drama</a></li>
                                        <li><a href="#">Mystery</a></li>
                                        <li><a href="#">Romance</a></li>
                                        <li><a href="#">Satire</a></li>
                                        <li><a href="#">Horror</a></li>
                                    </ul>
                                </li>
                                
                                <li class="col-sm-4 vertical-line-right vertical-line-left">
                                    <ul>
                                        <li class="dropdown-header">Authors</li>
                                        <li><a href="#">Stephen King</a></li>
                                        <li><a href="#">J. K. Rowling</a></li>
                                        <li><a href="#">William Shakespear</a></li>
                                        <li><a href="#">Jane Austin</a></li>
                                        <li><a href="#">J. R. R. Tolkien</a></li>
                                        <li><a href="#">Charles Dickens</a></li>
                                        <li><a href="#">James Patterson</a></li>
                                        <li><a href="#">Ernest Hemingway</a></li>
                                    </ul>
                                </li>

                                <li class="col-sm-4 vertical-line-left">
                                    <ul>
                                        <li class="dropdown-header">Top 10 books</li>
                                        <li><a href="#">Moby Dick</a></li>
                                        <li><a href="#">The Hobbit</a></li>
                                        <li><a href="#">Hamlet</a></li>
                                        <li><a href="#">The adventures of Huckleberry Fin</a></li>
                                        <li><a href="#">Pride and Prejudice</a></li>
                                        <li><a href="#">The Davinci Code</a></li>
                                        <li><a href="#">Harry Potter and The Deathly Hallows</a></li>
                                        <li><a href="#">Harry Potter and the Philosopher's Stone</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <div class="navbar-header">
                        <a href="#" class="sett2">Discounts</a>
                    </div>
                    <div class="navbar-header">
                        <a href="#" class="sett2">Top 10</a>
                    </div>

                </div>

                <div class="col-sm-4"></div>

                <div class="col-sm-1" >
                    <a id="shopping-icon-link" asp-controller="Checkout" asp-action="Index">
                      <div id="shopping-cart-icon-container">
                          <i class="fas fa-shopping-cart" id="shopping-cart-icon"></i>
                          <h2 id="num-items-in-cart">0</h2>
                      </div>
                    </a>
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />

        </div>
    </div>

    <footer class="navbar-inverse footer-settings footer">
        <div class="row">
            
            <div class="col-sm-1"></div>

            <div class="col-sm-4">
                <h4>Contact us</h4>
                
                <a href="https://www.facebook.com"><img class="social-size" src="~/images/fbIcon.svg" alt="facebook logo"></a>
                <a href="https://www.twitter.com"><img class="social-size" src="~/images/twIcon.svg" alt="twitter logo"></a>
                <a href="https://instagram.com"><img class="social-size" src="~/images/igIcon.svg" alt="instagram logo"></a>
                    
            </div>

            <div class="col-sm-4">
                <h4>About us</h4>
            </div>
        </div>
    </footer>


    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/nav.js" asp-append-version="true"></script>
        <script src="~/js/loginPopup.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/nav.js" asp-append-version="true"></script>
        <script src="~/js/loginPopup.js" asp-append-version="true"></script>
        <script src="~/js/userjs/user.js"></script>
        <script src="~/js/Admin/admin.js"></script>
        <script src="~/js/Book/BookDetails.js"></script>
        <script src="~/js/Admin/adminCreateHTML.js"></script>
    </environment>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">

        $( window ).ready(function() {
                var idArr = (JSON.parse(localStorage.getItem("storage")));
            $("#num-items-in-cart").html(idArr.length);
            

            $(".cart").click(function() {
            var Id = $("#book-title").attr("id");
            let idArr = new Array();
            let tmpArr = new Array();
            tmpArr = (JSON.parse(localStorage.getItem("storage")));
            if(tmpArr == null) {
                idArr.push(Id);
            } else {
                idArr = (JSON.parse(localStorage.getItem("storage")));
                idArr.push(Id);
            }
            localStorage.setItem("storage", JSON.stringify(idArr))
            console.log(idArr);
            $("#num-items-in-cart").html(idArr.length);
            });

        });

        
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
