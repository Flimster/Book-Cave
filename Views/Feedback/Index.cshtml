@{
    ViewData["Title"] = "Feedback";
}


<div id="feedback-outer-box" class="col-lg-12">
	<div id="feedback-inner-box" class="col-lg-8">
		<h1>Contact us</h1>
		<br>
		<form action="post">
			<div>
				<label for="email-input">Email</label>
				<input type="email" name="email-input" id="email-input">
			</div>
			<div>
				<label for="reason-select">Reason</label>
				<select name="reason-select" id="reason-select">
					<option value="damaged">Damaged goods</option>
					<option value="arrival">Never came</option>
					<option value="other">Other?</option>
				</select>
			</div>
			<div>
				<label for="order-id">Order id</label>
				<input type="text" name="id-input" id="id-input">
			</div>
			<label for="comment">Comment</label><br>
			<textarea name="comment" id="comment" cols="50" rows="5"></textarea><br>
			<button type="submit" class="btn btn-primary">Submit</button>
			<br>
		</form>
	</div>
</div>