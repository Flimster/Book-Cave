@model BookCave.Models.ViewModels.BookViewModel

<div class="container">
  <div class="col-lg-offset-1">
    <h3>@Model.Title</h3>
  </div>
  <br>

  <div class="col-lg-3 col-lg-offset-1">
    <b>Genre: </b>
    @Model.Genre <br>
    <b>Author: </b>
    @Model.Author <br>
  </div>

  <div class="col-lg-4"> 
    <img src=@Model.Image alt=Model.Title>
  </div>
  
</div>