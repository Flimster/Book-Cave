@model BookCave.Models.ViewModels.RegisterViewModel

<h1>Reqister</h1>

<form asp-action="Register" asp-controller="Account" class="form-horizontal">
    <div class="form-group">
        <label for="registration-email">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email.." id="registration-email">
    </div>

    <div class="form-group">
        <label for="registration-name">Full name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter full name.." id="registration-name">
    </div>

    <div class="form-group">
        <label for="registration-password">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter password.." id="registration-confirm">
    </div>

    <div class="form-group">
        <label for="registration-confirm-password">Confirm password</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password.." id="registration-confirm-password">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>