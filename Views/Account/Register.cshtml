@model Book_Cave.Models.ViewModels.RegisterViewModel

<h1>Reqister</h1>

<form asp-actiom="Register" asp-controller="Acocunt" class="form-horizontal">
    <div class="form-group">
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email..">
    </div>

    <div class="form-group">
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter full name..">
